<Window x:Class="YourApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicApp" Height="680" Width="800"
        Background="#111111">
    <Grid>
        <!-- Hauptlayout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#1a1a1a">
            <Button Content="Playlist"
                    Background="#333333"
                    Foreground="White"
                    FontSize="16"
                    Margin="10"
                    Padding="10,5"/>
        </StackPanel>

        <!-- Hauptbereich -->
        <Grid Grid.Column="1">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="300" Background="#222222" CornerRadius="5" Padding="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Bildplatzhalter -->
                        <Border Width="200" Height="200" Background="#444444" Margin="0,10"/>

                        <!-- Songtitel -->
                        <TextBlock Text="nope you're too late I already died"
                                   Foreground="White"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"
                                   x:Name="MusicTitle"
                                   />

                        <!-- Künstlername -->
                        <TextBlock Text="by wifiskeleton"
                                   Foreground="#cccccc"
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <!-- Buttons unten -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <!-- ✔ Button -->
                            <Button Width="50" Height="50" Background="#333333" Margin="10" BorderBrush="Transparent">
                                <TextBlock Text="✔" FontSize="24" Foreground="Lime"/>
                            </Button>

                            <!-- ❌ Button -->
                            <Button Width="50" Height="50" Background="#333333" Margin="10" BorderBrush="Transparent">
                                <TextBlock Text="✖" FontSize="24" Foreground="Red"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
